# Color variables for cool shit
CLEAR=$(tput sgr0)
BOLD=$(tput bold)
BLINK=$(tput blink)
SMSO=$(tput smso)
RMSO=$(tput rmso)

# Actual colors
BLACK=$(tput setaf 0)
RED=$(tput setaf 1)
GREEN=$(tput setaf 2)
YELLOW=$(tput setaf 3)
BLUE=$(tput setaf 4)
MAGENTA=$(tput setaf 5)
CYAN=$(tput setaf 6)
WHITE=$(tput setaf 7)
